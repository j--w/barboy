{
    "$schema": "http://json-schema.org/schema#",
    "id": "Pump.json",
    "title": "Pump",
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "label": {
        "type": "string",
        "minLength": 2,
        "maxLength": 255
       },
      "isBusy": {
        "type": "boolean"
      },
      "flowRate": {
        "type": "integer",
        "minimum": 0,
        "maximum": 420
      },
      "gpioPin": {
        "type": "integer",
          "enum": [
            4,
            17,
            27,
            22,
            23,
            24,
            18,
            25,
            5,
            6,
            12,
            13,
            16,
            26
          ]    
      },
      "bottleVolume": {
        "type": "integer",
        "minimum": 200,
        "maximum": 2000
      },
      "estimatedVolumeRemaining": {
        "type": "integer",
        "minimum": 200,
        "maximum": 2000
      },
      "ingredient": {
        "type": "object",
        "$ref": "Ingredient.json"
      },
      "ingredientId": {
        "type": "integer"
      }
    },
    "required": [
      "label",
      "gpioPin",
      "flowRate"
    ],
    "additionalProperties": false
  }
